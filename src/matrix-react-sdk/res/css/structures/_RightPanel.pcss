.mx_RightPanel {
    box-sizing: border-box;
    overflow-x: hidden;
    flex: 0 0 auto;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    background: $background;
    border-left: 1px solid $border-primary-color1;
    contain: strict;
}

.mx_RightPanel_header {
    order: 1;
    border-bottom: 1px solid $primary-hairline-color;
    flex: 0 0 52px;
}

/** Fixme - factor this out with the main header **/

.mx_RightPanel_headerButtonGroup {
    height: 100%;
    display: flex;
    background-color: $background;
    padding: 0 9px;
    align-items: center;
}

/* See: mx_RoomHeader_button, of which this is a copy.
 * TODO: factor out a common component to avoid this duplication.
 */
.mx_RightPanel_headerButton {
    position: relative;
    flex: 0 0 auto;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    cursor: pointer;

    &::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: $icon-primary-color;
        mask-repeat: no-repeat;
        mask-position: center;
        mask-size: contain;
    }

    &:hover, &.mx_RightPanel_headerButton_highlight {
        background: $icon-primary-bg-color;
    }
}

.mx_RightPanel_inviteUsersButton::before {
    width: 24px;
    height: 22px;
    mask-image: url("$(res)/img/element-icons/room/invite.svg");
}


.mx_RightPanel_threadsButton::before {
    width: 18px;
    height: 18px;
    mask-image: url("$(res)/img/element-icons/message/thread.svg");
}
.mx_RightPanel_memberInfoButton::before {
    width: 26px;
    height: 20px;
    mask-image: url("$(res)/img/element-icons/room/room-summary.svg");
}

.mx_RightPanel_roomMembersButton::before {
    width: 24px;
    height: 18px;
    mask-image: url("$(res)/img/element-icons/room/room-members.svg");
}

.mx_RightPanel_roomSettingsButton::before {
    width: 16px;
    height: 4px;
    mask-image: url("$(res)/img/element-icons/more-actions.svg");
}

$dot-size: 8px;
$dot-offset: -3px;
$pulse-color: $alert;

.mx_RightPanel_pinnedMessagesButton {
    &::before {
        mask-image: url("$(res)/img/element-icons/room/pin.svg");
        mask-position: center;
    }
}

.mx_RightPanel_headerButton_unreadIndicator_bg {
    position: absolute;
    right: $dot-offset;
    top: $dot-offset;
    margin: 4px;
    width: $dot-size;
    height: $dot-size;
    border-radius: 50%;
    transform: scale(1.6);
    transform-origin: center center;
    background: rgba($background, 1);
}

.mx_RightPanel_headerButton_unreadIndicator {
    position: absolute;
    right: $dot-offset;
    top: $dot-offset;
    margin: 4px;

    &.mx_Indicator_red {
        background: $background-danger-color2;
        box-shadow: 0 0 0 0 rgba($background-danger-color2, 1);
    }

    &.mx_Indicator_gray {
        background: rgba($room-icon-unread-color, 1);
        box-shadow: 0 0 0 0 rgba($room-icon-unread-color, 1);
    }

    &.mx_Indicator_bold {
        background: rgba($primary-content, 1);
        box-shadow: 0 0 0 0 rgba($primary-content, 1);
    }
}

.mx_RightPanel_timelineCardButton {
    &::before {
        mask-image: url("$(res)/img/element-icons/feedback.svg");
        mask-position: center;
    }
}

@keyframes mx_RightPanel_indicator_pulse {
    0% {
        transform: scale(0.95);
    }

    70% {
        transform: scale(1);
    }

    100% {
        transform: scale(0.95);
    }
}

@keyframes mx_RightPanel_indicator_pulse_shadow {
    0% {
        opacity: 0.7;
    }

    70% {
        transform: scale(2.2);
        opacity: 0;
    }

    100% {
        opacity: 0;
    }
}

.mx_RightPanel_headerButton_badge {
    font-size: $font-8px;
    border-radius: 8px;
    color: $accent-fg-color;
    background-color: $accent;
    font-weight: bold;
    position: absolute;
    top: -4px;
    left: 20px;
    padding: 2px 4px;
}

.mx_RightPanel_collapsebutton {
    flex: 1;
    text-align: right;
    height: 16px;
    border: none;
}

.mx_RightPanel .mx_MemberListPanel,
.mx_RightPanel .mx_MemberInfo,
.mx_RightPanel_blank {
    order: 2;
    flex: 1 1 0;
}

.mx_RightPanel .mx_RoomView_messagePanelSpinner {
    order: 2;
    margin: auto;
}

.mx_RightPanel_empty {
    margin-right: -28px;

    h2 {
        font-weight: 700;
        margin: 16px 0;
    }

    h2,
    p {
        font-size: $font-14px;
    }

    &::before {
        content: "";
        display: block;
        margin: 11px auto 29px auto;
        height: 42px;
        width: 42px;
        background-color: $header-panel-text-primary-color;
        mask-repeat: no-repeat;
        mask-size: contain;
        mask-position: center;
    }
}

.mx_RightPanel_scopeHeader {
    margin: 24px;
    text-align: center;
    font-weight: $font-semi-bold;
    font-size: $font-18px;
    line-height: $font-22px;

    .mx_BaseAvatar {
        margin-right: 8px;
        vertical-align: middle;
    }

    .mx_BaseAvatar_image {
        border-radius: 8px;
    }
}
